<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".fragments.MindfulnessOptionsFragment">


    <View
        android:id="@+id/mindfulness_view"
        android:layout_width="411dp"
        android:layout_height="171dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/mindfulness_drawer_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Mindfulness"
        android:textColor="@color/black"
        android:textSize="@dimen/_20font_ssp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view"
        app:layout_constraintEnd_toEndOf="@+id/mindfulness_view"
        app:layout_constraintStart_toStartOf="@+id/mindfulness_view"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view" />


    <View
        android:id="@+id/mindfulness_view1"
        android:layout_width="416dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="8dp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view" />

    <TextView
        android:id="@+id/mindfulness_article_text1"
        android:layout_width="257dp"
        android:layout_height="74dp"
        android:fontFamily="serif"
        android:text="What is Mindfulness?"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_ssp"
        app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view1"
        app:layout_constraintVertical_bias="0.673" />

    <ImageView
        android:id="@+id/mindfulness_imageView4"
        android:layout_width="116dp"
        android:layout_height="110dp"
        android:src="@drawable/mindfulness1"
        app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view1"
        app:layout_constraintEnd_toStartOf="@+id/mindfulness_article_text1"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view1"
        app:layout_constraintVertical_bias="0.412" />


    <View
        android:id="@+id/mindfulness_view2"
        android:layout_width="413dp"
        android:layout_height="124dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="8dp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view" />

    <TextView
        android:id="@+id/mindfulness_article_text2"
        android:layout_width="257dp"
        android:layout_height="74dp"
        android:fontFamily="serif"
        android:text="Types of Stress"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_ssp"
        app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view2"
        app:layout_constraintVertical_bias="0.621" />

    <ImageView
        android:id="@+id/mindfulness_imageView1"
        android:layout_width="116dp"
        android:layout_height="110dp"
        android:src="@drawable/mindfulness2"
        app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view2"
        app:layout_constraintEnd_toStartOf="@+id/mindfulness_article_text2"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view2"
        app:layout_constraintVertical_bias="0.611" />

    <View
        android:id="@+id/mindfulness_view3"
        android:layout_width="416dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="444dp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view" />

    <TextView
        android:id="@+id/mindfulness_article_text3"
        android:layout_width="257dp"
        android:layout_height="74dp"
        android:fontFamily="serif"
        android:text="How to manage Stress"
        android:textColor="@color/white"
        android:textSize="@dimen/_14font_ssp"
        app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view3"
        app:layout_constraintVertical_bias="0.792" />

    <ImageView
        android:id="@+id/mindfulness_imageView3"
        android:layout_width="116dp"
        android:layout_height="110dp"
        android:src="@drawable/mindfulness3"
        app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view3"
        app:layout_constraintEnd_toStartOf="@+id/mindfulness_article_text3"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mindfulness_view3"
        app:layout_constraintVertical_bias="0.805" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:text="Articles"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mindfulness_view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="@+id/mindfulness_view"
        app:layout_constraintTop_toBottomOf="@+id/mindfulness_view"
        app:layout_constraintVertical_bias="0.04" />

</androidx.constraintlayout.widget.ConstraintLayout>