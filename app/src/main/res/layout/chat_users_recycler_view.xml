<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_user_rv_profile"
        android:layout_width="@dimen/_45hsdp"
        android:layout_height="@dimen/_45hsdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/woman"
        app:civ_border_color="@color/rose"
        app:civ_border_width="@dimen/_2font_ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chat_user_rv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:text="Amrita2004"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/chat_user_rv_profile"
        app:layout_constraintStart_toEndOf="@+id/chat_user_rv_profile"
        app:layout_constraintTop_toTopOf="@+id/chat_user_rv_profile"
        app:layout_constraintVertical_bias="0.26999998" />

    <TextView
        android:id="@+id/chat_user_rv_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:text="lastMessage"
        android:textColor="@color/black"
        android:textSize="@dimen/_9font_ssp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_user_rv_profile"
        app:layout_constraintStart_toEndOf="@+id/chat_user_rv_profile"
        app:layout_constraintTop_toBottomOf="@+id/chat_user_rv_name" />

    <TextView
        android:id="@+id/chat_user_rv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="serif"
        android:text="time"
        android:textSize="@dimen/_9font_ssp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/chat_user_rv_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chat_user_rv_profile"
        app:layout_constraintVertical_bias="0.32999998" />


</androidx.constraintlayout.widget.ConstraintLayout>