<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friends_rv_profile"
        android:layout_width="@dimen/_40hsdp"
        android:layout_height="@dimen/_40hsdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/woman"
        app:civ_border_color="@color/rose"
        app:civ_border_width="@dimen/_2font_ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/friend_rv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Amrita2004"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="@+id/friends_rv_profile"
        app:layout_constraintStart_toEndOf="@+id/friends_rv_profile"
        app:layout_constraintTop_toTopOf="@+id/friends_rv_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>