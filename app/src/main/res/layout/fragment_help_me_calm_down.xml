<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_calm_down"
    tools:context=".fragments.HelpMeCalmDownFragment">


    <View
        android:id="@+id/yoga_one_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120hsdp"
        android:layout_marginStart="@dimen/_35hsdp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="@dimen/_35hsdp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="serif"
        android:text="Breathing"
        android:textColor="@color/white"
        android:textSize="@dimen/_30font_ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/yoga_one_option"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/yoga_one_option"
        app:layout_constraintTop_toTopOf="@+id/yoga_one_option" />

    <View
        android:id="@+id/yoga_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120hsdp"
        android:layout_marginStart="@dimen/_35hsdp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="@dimen/_35hsdp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yoga_one_option" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="serif"
        android:text="Yoga"
        android:textColor="@color/white"
        android:textSize="@dimen/_30font_ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/yoga_option"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/yoga_option"
        app:layout_constraintTop_toTopOf="@+id/yoga_option" />


</androidx.constraintlayout.widget.ConstraintLayout>