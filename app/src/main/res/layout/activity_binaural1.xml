<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calm_melodies_cover"
    tools:context=".activities.Binaural1Activity">


    <ImageView
        android:id="@+id/play"
        android:layout_width="44dp"
        android:layout_height="97dp"
        android:src="@drawable/play"
        app:layout_constraintBottom_toBottomOf="@+id/binaural_option_one"
        app:layout_constraintEnd_toEndOf="@+id/binaural_option_one"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/binaural_option_one"
        app:layout_constraintTop_toTopOf="@+id/binaural_option_one" />

    <View
        android:id="@+id/binaural_option_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/_35hsdp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="@dimen/_35hsdp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/play_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Now"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_ssp"
        app:layout_anchor="@+id/binaural_option_one"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/binaural_option_one"
        app:layout_constraintEnd_toEndOf="@+id/binaural_option_one"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="@+id/binaural_option_one"
        app:layout_constraintTop_toTopOf="@+id/binaural_option_one"
        app:layout_constraintVertical_bias="0.578" />


</androidx.constraintlayout.widget.ConstraintLayout>
